{
    "compilerOptions": {
        "module": "commonjs",
        // "declaration": true,
        "removeComments": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "esnext",
        "sourceMap": true,
        "outDir": "./lib",
        "baseUrl": "./",
        "incremental": true
    },
    "exclude": ["node_moudules", "test/**/*"],
    "include": ["src/**/*"]
}
